@model PetCareAdviceApp.ViewModels.LoginViewModels

<h1>Login</h1>

<form asp-controller="HomeController" asp-action="Login" method="post">
    

    <div class="form-group">
    <label for="Name">Enter your name here</label>
    <input class= "form-control" name="Name" id="Name" type="text" />
    </div>
    <div class="form-group">
    <label for="Password">Enter your password here</label>
    <input class= "form-control" name="Password" id="Password" type="text"/>
    </div>

    <input type="submit" value="Submit" />

</form>

    

